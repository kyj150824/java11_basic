package org.kh.site;
// 대입 연산자 : 연산 후에 대입하는 연산자 +=, -=, *=, /=, %=, &=, |=, >>=, <<=, >>>=, ^=
public class Operation7 {

	public static void main(String[] args) {
		int a = 20;
		int b = 15;
		int tmp;
		a += b;  // a = 35, b = 15 
		b -= a; // a = 35, b = -20
		
		// a와 b를 맞교환하는 경우 ( tmp ) tmp = 임시 기억 장소.
		tmp = a;
		a = b;
		b = tmp;
		
		
		
	}

}
